# Default script for simulating Nafion membrane
# WITH ELECTRODES (electrode atoms frozen)
clear
units              si
dimension          3
boundary           p p p
atom_style         molecular

comm_modify        vel yes
neighbor           3.0 bin
#neigh_modify       one 10000
                  
variable           filename index nafion.data
variable           kB equal 1.3806e-23
variable           T equal 1.0/${kB}
variable           Seed equal 1234
variable           R equal 1.0
variable           Nsteps equal 3e4
variable           timestep equal 0.05

pair_style         dpd ${T} ${R} ${Seed}
bond_style         harmonic
read_data          ${filename}

shell              mkdir Dump
shell              cd Dump
dump               my_dump all xyz 100 dump_*.xyz
thermo             100

group              electrodes type 5
group              membrane type 1 2 3 4
minimize           1.0e-10 1.0e-10 100 100           # energy tol, force tol, maxiter, maxeval

velocity           membrane create ${T} ${Seed}
reset_timestep     0
timestep           ${timestep}
fix                1 all nve
fix                2 electrodes setforce 0.0 0.0 0.0
run                ${Nsteps}
                   
print              "All done."
